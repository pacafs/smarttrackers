<!-- app/views/reviews/_form.html.erb -->
<%= form_for review, url: gauge_measurement_review_path do |f| %>
  <div class="form-group">
    <%= f.label :status %>
    <%= f.select :status, [['Pending', 'Pending'], ['Approved', "Approved"], ['Rejected', "Rejected"]], {}, {class: 'form-control'} %>
  </div>
  <%= f.submit class: 'btn btn-primary mt-3' %>
<% end %>