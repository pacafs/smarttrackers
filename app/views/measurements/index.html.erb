<div class="container">
  <h1 class="mt-4 mb-4"><%= @gauge.name %></h1>
   
   <% @measurements.each do |m| %>
        <%= link_to gauge_measurement_path(id: m.id) do %>
            <p>Measurement: <%= m.id %> - <%= m.amount %></p>
        <% end %>
   <% end %>

    <%= link_to 'Back to Power Gauges', gauges_path, class: 'btn btn-primary mt-4' %>
    
</div>