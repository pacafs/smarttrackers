<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card mt-5 mb-4 shadow-lg">
        <div class="card-header bg-primary text-white text-center">
          <h2 class="mb-0">Measurement: <%= @measurement.id %></h2>
        </div>
        <div class="card-body">
          <table class="table table-striped table-bordered">
            <thead class="table-dark">
              <tr>
                <th>Amount</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= @measurement.amount %></td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="card-footer text-center">
          <%= link_to 'Back to PowerGauge', gauge_path(id: @measurement.power_gauge_id), class: 'btn btn-secondary' %>
          <% if !current_user.is_manager? %>
            <% if @measurement.review %>
              <% if @measurement.review.status != "Approved" %>
                <%= link_to 'Edit', edit_gauge_measurement_path(measurement_id: @measurement.id), class: 'btn btn-success ms-2' %>
              <% end %>
            <% end %>
          <% else %>
            <%= link_to 'Review', new_gauge_measurement_review_path(measurement_id: @measurement.id), class: 'btn btn-success ms-2' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>